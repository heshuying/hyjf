			slidesPerGroup:1,
			autoplayDisableOnInteraction : false,
			autoplay : 3000,
			loop:true,
			loopedSlides :10,
			loopAdditionalSlides:1
		})
		$('#prev').click(function(){
		mySwiper.swipePrev();
		})
		$('#next').click(function(){
		mySwiper.swipeNext();
		})
 	}else{
		var mySwiper = new Swiper(' .swiper-container', {
			slidesPerView : 'auto',
			slidesPerGroup:1,
			autoplay : 3000,
			autoplayDisableOnInteraction : false,
			spaceBetween:15,
			nextButton: '#next',
    		prevButton: '#prev',
    		loop:true,
    		loopedSlides :10,
    		loopAdditionalSlides:1
		})
 		$('#prev').click(function(){
			mySwiper.slidePrev();
		})
		$('#next').click(function(){
			mySwiper.slideNext();
		})
 	}
	//鼠标移入资质停止轮播，显示箭头
	$('.founder-area').mouseenter(function(e){
		mySwiper.stopAutoplay();
        $("#prev").stop().fadeIn(200);
    	$("#next").stop().fadeIn(200);
	}).mouseleave(function(e){
		mySwiper.startAutoplay();
		$("#prev").fadeOut(100);
		$("#next").fadeOut(100);
	})

	</script>
